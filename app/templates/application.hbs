{{page-title "PodDashboard"}}

<div class="flex h-screen justify-between">
  <div class="basis-1/3 flex-1
          mr-10 p-2
          bg-gray-100 drop-shadow border-r border-r-solid border-r-gray-300
          h-screen overflow-auto">
    <Ui::TabBar
      @onChange={{fn (mut this.tab)}}
      @selected={{this.tab}}
      class="-m-2 mb-4 border-b-2 border-b-gray-300 bg-gray-200 flex drop-shadow" as |TabBar|>
      <TabBar.Tab @value="pods" class="m-0 px-4 py-2 border-r bg-gray-100 border-r-gray-300">Pods</TabBar.Tab>
      <TabBar.Tab @value="components" class="m-0 px-4 py-2 border-r bg-gray-100 border-r-gray-300">Components</TabBar.Tab>
    </Ui::TabBar>

    {{#if this.showingPods}}
      <ApplicationFileTree
         />
    {{else if this.showingComponents}}
      <ComponentTree />
    {{/if}}
  </div>

  {{outlet}}
</div>

